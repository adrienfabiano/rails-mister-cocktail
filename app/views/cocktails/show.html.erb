<h1> <%= @cocktail.name %> </h1>

<% @cocktail.doses.each do |dose| %>
  <ul>
    <li>
      <%= dose.description %>
    </li>
    <li>
      <%= dose.ingredient[:name] %>
    </li>
    <li>
      <%= link_to "destroy", dose_path(dose), method: :delete %>
    </li>
  </ul>
<% end %>


<%= link_to "retour", cocktails_path %>
<%= link_to "add ingredient", new_cocktail_dose_path(@cocktail) %>
